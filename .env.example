# Agentora local-first defaults (safe to run fully offline)
AGENTORA_USE_MOCK_OLLAMA=true
AGENTORA_USE_MOCK_VOICE=false

# Streamlit-first runtime
AGENTORA_STREAMLIT_MODE=auto
AGENTORA_API_URL=
AGENTORA_PORT=8088

# Database/runtime storage
# Preferred canonical DB setting:
AGENTORA_DATABASE_URL=sqlite:///./agentora.db
# Legacy path-style settings kept for compatibility:
AGENTORA_DB_PATH=server/data/agentora.db
AGENTORA_ARTIFACTS_DIR=server/data/artifacts
AGENTORA_UPLOADS_DIR=server/data/uploads

# Local network policy
AGENTORA_NETWORK_MODE=localhost_only
AGENTORA_ALLOWED_HOSTS=localhost,127.0.0.1
AGENTORA_BIND_HOST=127.0.0.1

# Ollama defaults
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL_DEFAULT=llama3.1
AGENTORA_VISION_MODEL_FALLBACK=llava:latest

AGENTORA_EMBED_MODEL=embeddinggemma
AGENTORA_TOOL_MODEL=qwen3:14b
AGENTORA_CHAT_MODEL=gemma3:12b
AGENTORA_WORKER_URLS=
AGENTORA_CAPSULE_TOP_K=6
AGENTORA_MAX_TOOL_STEPS=4
AGENTORA_VISION_MODEL=
AGENTORA_EXTRACTION_MODEL=
AGENTORA_ENABLE_MODEL_ROLE_ROUTING=true
AGENTORA_ALLOWED_TOOL_NAMES=
AGENTORA_BLOCKED_TOOL_NAMES=
AGENTORA_HTTP_ALLOWLIST=
AGENTORA_FILE_WRITE_ROOT=server/data/artifacts
AGENTORA_MAX_WORKER_RETRIES=2

# Optional advanced controls
AGENTORA_PARALLEL_LIMIT=4
AGENTORA_DEFAULT_MAX_TURNS=8
AGENTORA_DEFAULT_MAX_SECONDS=90
AGENTORA_ENABLE_HTTP_FETCH=false
AGENTORA_ENABLE_CODE_EXEC=false
AGENTORA_ENABLE_LAN_MODE=false
AGENTORA_ENCRYPTION_KEY=

# Optional voice paths
VOICE_ENABLED=false
WHISPER_CPP_PATH=
PIPER_PATH=
PIPER_VOICE_MODEL_PATH=

# Optional integrations
COEVO_URL=
COEVO_API_KEY=
AGENTORA_SOUL_SWITCH_DEFAULT=false

# Gathering / LAN
AGENTORA_LAN_DISCOVERY_ENABLED=true
AGENTORA_GATHERING_ENCRYPTION_KEY=

# Legacy / Cosmos feature toggles
AGENTORA_LEGACY_ENABLED=true
AGENTORA_LEGACY_VAULT_PATH=server/data/legacy/family_vault.db
AGENTORA_LEGACY_ENCRYPTION_KEY=

AGENTORA_COSMOS_ENABLED=true
AGENTORA_COSMOS_DB_PATH=server/data/cosmos/cosmos.db
AGENTORA_COSMOS_ENCRYPTION_KEY=

AGENTORA_OPEN_COSMOS_ENABLED=true
AGENTORA_OPEN_COSMOS_DIR=server/data/open_cosmos
AGENTORA_OPEN_COSMOS_ENCRYPTION_KEY=

AGENTORA_LIVING_ARCHIVE_ENABLED=true
AGENTORA_COMMUNITY_SPOTLIGHT_ENABLED=true
